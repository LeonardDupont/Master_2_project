function [] = purkinje_artscape(masks)

N = length(masks);
S = size(masks{1,1});
cmap = parula(N);
figure, hold on

for cell = 1:N 
   I = masks{1,cell};
   imshow(I, 'InitialMag', 'fit')
   c = cmap(cell,:);
   full = cat(1,ones(size(S))*c(1),ones(size(S))*c(2),ones(size(S))*c(3)); 
   h = imshow(full); hold on 
   set(h, 'AlphaData', I) , hold on
end

hold off 

end